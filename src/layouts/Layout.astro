---
export interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Chance Chapman's Resume - Senior Developer with 20+ years experience in Node.js, PHP, and Web3 technologies" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<link rel="icon" type="image/png" href="/favicon.png" />
		<link rel="shortcut icon" href="/favicon.ico" />
		<title>{title}</title>
	</head>
	<body>
		<slot />
	</body>
</html>

<style is:global>
	body {
		font-family: 'Segoe UI', Arial, sans-serif;
		max-width: 900px;
		margin: 20px auto;
		line-height: 1.6;
		color: #333;
		background-color: #f9f9f9;
	}
	.container {
		background: #fff;
		padding: 30px;
		border-radius: 8px;
		box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
	}
	.header {
		text-align: center;
		background: #1a3c6d;
		color: #fff;
		padding: 20px;
		border-radius: 8px 8px 0 0;
		margin: -30px -30px 20px;
	}
	.header h1 {
		margin: 0;
		font-size: 2.2em;
	}
	.header p {
		margin: 5px 0;
		font-size: 1.1em;
	}
	h2 {
		color: #1a3c6d;
		border-bottom: 2px solid #1a3c6d;
		padding-bottom: 5px;
		margin-top: 20px;
	}
	ul {
		list-style-type: disc;
		margin-left: 20px;
	}
	.section {
		margin-bottom: 20px;
	}
	.job {
		margin-bottom: 15px;
	}
	.job h3 {
		margin: 0;
		font-size: 1.3em;
		color: #2a4b7c;
	}
	.job p {
		margin: 5px 0;
		font-style: italic;
	}
	@media (max-width: 600px) {
		body {
			margin: 10px;
		}
		.container {
			padding: 20px;
		}
		.header h1 {
			font-size: 1.8em;
		}
	}
</style>